<p>
    <a asp-controller="Movie" asp-action="Create" class="btn btn-success">Add New Movie</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark text-center">
        <tr>
            <th>Title</th>
            <th>Release Date</th>
            <th>Genre</th>
            <th>Poster</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var movie in Model)
        {
            <tr class="text-center">
                <td>@movie.Title</td>
                <td>@movie.ReleaseYear</td>
                <td>@movie.Genre</td>

                <!-- TODO: Make this image a link to /Movie/GetById/id -->
                <td>
                    <a href="/Movie/GetById/@movie.Id">
                        <img src="/Image/@movie.ImgUrl" style="width:80px;height:80px" />
                    </a>
                </td>
                <td>
                    <a href="/Movie/Edit/@movie.Id" class="btn btn-primary">Edit</a>
                    <a href="/Movie/Delete/@movie.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>