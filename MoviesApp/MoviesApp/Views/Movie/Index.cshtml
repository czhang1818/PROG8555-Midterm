<table class="table table-striped table-bordered">
    <thead class="thead-dark text-center">
        <tr>
            <th>Title</th>
            <th>Release Date</th>
            <th>Genre</th>
            <th>Poster</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var movie in Model)
        {
            <tr class="text-center">
                <td>@movie.Title</td>
                <td>@movie.ReleaseYear</td>
                <td>@movie.Genre</td>

                <!-- TODO: Make this image a link to /Movie/GetById/id -->
                <td>
                    <img src="/Image/@movie.ImgUrl" style="width:80px;height:80px" />
                </td>
            </tr>
        }
    </tbody>
</table>